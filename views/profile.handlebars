<html>
	<head>
		<title>Wellness Tracker</title>
		<meta charset="utf-8">
		<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/profile.css" rel="stylesheet">
		<script src="/js/bar.js"></script>
	</head>

	<body>
		<div id="main" class="screen">
			<div class="dropdown">
			<button onClick="openMenu()" class="dropbtn">&#9776;</button>
			<div id="sidebar" class="dropdown-content">
				<a class="selected" href="/home">Home</a>
				<a href="record">Record</a>
				<a href="forum">Forum</a>
				<a href="#">Profile</a>
				<a href="help">Help</a>
				<button id="logout" class = "logout">Log Out</button>
			</div>
	  	</div>

	    {{#each data}}
	    <div>
	    	<img class="profile-pic" src="images/default_profile_picture.JPG" alt="Profile Picture">
			<h3 class="name">{{name}}</h3>
			<p class="age">Age: {{age}}</p>
			<p class="location"> Location: {{city}}, {{state}}</p>
		</div>
		{{/each}}

		{{#each data}}
		{{#each records}}
		<div class="recents">
			<h4>Recent Records</h4>
			<p class="record_date">Date: {{date}}</p>
			<p class="record_title">Title: {{title}}</p>
			<p class="record_subject">Subject: {{subject}}</p>
			<p class="record_hours">Hours of Sleep: {{input}}</p>
		</div>
		{{/each}}
		{{/each}}

		</div>


	</body>
</html>