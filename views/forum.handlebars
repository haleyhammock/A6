<html>
<head>
	<title>Wellness Tracker</title>
	<meta charset="utf-8">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="routes/addPost"></script>
	<script src="routes/addRecords"></script>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/post.css" rel="stylesheet">
	<script src="/js/bar.js"></script>
	<script src="/js/popUp.js"></script>
</head>

<body>
	<div id="main" class="screen">
		<div class="dropdown">
		<button onClick="openMenu()" class="dropbtn">&#9776;</button>
		<div id="sidebar" class="dropdown-content">
			<a class="selected" href="/">Home</a>
			<a href="record">Record</a>
			<a href="forum">Forum</a>
			<a href="profile">Profile</a>
			<a href="help">Help</a>
		</div>
  </div>
    <h3 class="title">Forum</h3>
    <br>
    <button onClick="openModal()" id="button">+ Add a new post</button>

    {{#each posts}}
		<div class="posts">
		
			<h3>{{topic}}</h3>
		
			<p>{{message}}</p>
		</div>
	{{/each}}
    
    <div id="myModal" class="modal">

    	<div class="modal-content">
    		<button onClick="openModal()" id="close">x</button>
    		<form id="addPosts" role="form" method="get" action="/addPost">
					<label class="formlabels" for="topic" id="topic" name="topic">Topic:     </label>
					<input type="text" class="forLabels" id="topic" name="topic"><br><br>
					<label class="formlabelsMessage" for="message">Message:</label>
					<textarea name="message" rows="10" cols="30"></textarea><br><br>
					<div class="data">
					<button onClick="graph()" class="dropmenu">&#x22EE;</button>
					<div id="options" class="graph-content">
					<label for="graph">Graph Type</label>
					
						<select name="graph" id="graph">
						<option value="sleep">sleep</option>
					</select>
				</div>
					</div><br>

					<input type="submit" id="submitBtn" class="btn btn-default" value="Post"></input><br>
				</form>
		</div>
	</div>


</body>
</html>
